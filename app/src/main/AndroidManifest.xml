<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sistemas2014.unifebe.edu.br.emprestaai">

    <application
        android:name=".EmprestaAiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="dbprod.db" />
        <meta-data
            android:name="VERSION"
            android:value="5" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="sistemas2014.unifebe.edu.br.emprestaai" />

        <activity android:name=".MenuPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.CadastroPesssoa"
            android:label="Cadastro de Pessoa" />

        <activity
            android:name=".Controller.ConsultaPessoa"
            android:label="Consulta de Pessoas"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Controller.CadastroEmprestimo"
            android:label="@string/activity_emprestimo" />

        <activity
            android:name=".Controller.CadastroItens"
            android:label="@string/activity_cadastroItens" />

        <activity android:name=".Controller.ConsultaEmprestimo"
            android:label="@string/consulta_emprestimos"/>
        <activity
            android:name=".Controller.DetalhePessoa" />
    </application>

</manifest>